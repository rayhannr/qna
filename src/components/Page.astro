---
import { getLangFromUrl } from '@/i18n/utils'
import Layout from '../layouts/Layout.astro'
import { AccordionQnA } from '@/components/AccordionQnA'

interface Props {
  title: string
}

const { title } = Astro.props
const lang = getLangFromUrl(Astro.url)
---

<Layout>
  <div class="px-8 py-16 md:px-16 lg:px-24">
    <h1 class="scroll-m-20 text-4xl font-extrabold tracking-tight lg:text-5xl">{title}</h1>
    <AccordionQnA lang={lang} client:only />
  </div>
</Layout>
